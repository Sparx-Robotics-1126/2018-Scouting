<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sparx1126.com.powerup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/poweruplogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="sparx1126.com.powerup.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Directory"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".CheckList"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Admin"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Benchmarking"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Scouting"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".View"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>