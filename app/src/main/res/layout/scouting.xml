<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sparx_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:text="Team Number:"
            android:textSize="60sp"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Team #"
            android:textSize="50sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:text="Alliance Color"
            android:textSize="45sp"
            android:layout_marginTop="20dp"/>

        <RadioButton
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:text="Blue"
            android:textSize="45sp"/>
        <RadioButton
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:text="Red"
            android:textSize="45sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Match #:"
            android:textColorHint="@android:color/black"
            android:textSize="60sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autofillHints="Number"
            android:ems="10"
            android:hint="Number"
            android:inputType="textPersonName"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:textSize="90sp"

        android:text="Autonomous" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"

        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Crossed Auto Line" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Scored Switch" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Scored Scale" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Pickup Up Cube" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Place Cube in exchange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Starting Positon"
                android:textSize="40sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Left" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Center" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Right" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>