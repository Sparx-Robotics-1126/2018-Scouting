<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Screen"
    android:id="@+id/mainScrollView"
    android:background="@drawable/sparx_gradient">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sparx_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/team"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            style="@style/NormalTextView"
            android:text="Team Number:" />

        <EditText
            android:id="@+id/editText2"
            style="@style/ShortEditText"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/color">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:text="Alliance Color"
            android:textSize="45sp"
            android:layout_marginTop="20dp"/>

        <RadioButton
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:text="Blue"
            android:textSize="45sp"/>
        <RadioButton
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:text="Red"
            android:textSize="45sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/match"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Match #:"
            android:textColorHint="@android:color/black"
            android:textSize="70sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autofillHints="Number"
            android:ems="10"
            android:hint="Number"
            android:inputType="textPersonName"
            android:textSize="60sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:textSize="90sp"

        android:text="Autonomous" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/auto"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Crossed Auto Line" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Scored Switch" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Scored Scale" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Pickup Up Cube" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="50sp"
            android:text="Place Cube in exchange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Starting Positon"
                android:textSize="40sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Left" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Center" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Right" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tele"
        android:orientation="vertical">


        <TextView
            android:id="@+id/teleop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="95sp"
            android:text="Teleop" />
    </LinearLayout>

</LinearLayout>

</ScrollView>