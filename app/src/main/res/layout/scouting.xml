<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScrollView"
    style="@style/Screen"
    android:background="@drawable/sparx_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sparx_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/team"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NormalTextView"
                android:autofillHints="0"
                android:text="Team Number:" />

            <EditText
                android:id="@+id/scouteamnuminput"
                style="@style/ShortEditText"
                android:hint="Team #"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="293dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Alliance Color"
                android:textSize="45sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/blueAlliancebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Blue"
                    android:textSize="40sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/redAlliancebtn"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Red"
                    android:textSize="40sp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/match"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Match #:"
                android:textColorHint="@android:color/black"
                android:textSize="70sp" />

            <EditText
                android:id="@+id/matchnumimput"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="60sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:text="@string/autonomous"
            android:textSize="90sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/auto"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/autolinecheck"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Crossed Auto Line"
                android:textSize="50sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:id="@+id/scoreswitchcheck"
                android:layout_height="80dp"
                android:text="Scored Switch"
                android:textSize="50sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:id="@+id/scorescalecheck"
                android:layout_height="80dp"
                android:text="Scored Scale"
                android:textSize="50sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:id="@+id/pickupcubecheck"
                android:layout_height="80dp"
                android:text="Pickup Up Cube"
                android:textSize="50sp" />

            <CheckBox
                android:layout_width="match_parent"
                android:id="@+id/cubexchangecheck"
                android:layout_height="80dp"
                android:text="Place Cube in exchange"
                android:textSize="50sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Starting Positon"
                    android:textSize="40sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/startLeftbtn"
                    android:layout_weight="1"
                    android:text="Left"
                    android:textSize="15sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/startCenterbtn"
                    android:layout_weight="1"
                    android:text="Center"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/startRightbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Right"
                    android:textSize="15sp" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tele"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teleop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teleop"
                android:textSize="95sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Switch"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:text="Times scored switch"
                    android:textSize="30sp" />

                <sparx1126.com.powerup.custom_layouts.PlusMinusEditTextLinearLayout
                    android:id="@+id/timesscoredswitchpicker"
                    style="@style/HorizontalNumberPicker" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:text="Times scored scale"
                    android:textSize="30sp" />

                <sparx1126.com.powerup.custom_layouts.PlusMinusEditTextLinearLayout
                    android:id="@+id/timesscoredscalepicker"
                    style="@style/HorizontalNumberPicker" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:text="Times placed cube in exchange"
                    android:textSize="30sp" />

                <sparx1126.com.powerup.custom_layouts.PlusMinusEditTextLinearLayout
                    android:id="@+id/timesplacedexchangepicker"
                    style="@style/HorizontalNumberPicker" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:text="Cubes picked up from floor"
                    android:textSize="30sp" />

                <sparx1126.com.powerup.custom_layouts.PlusMinusEditTextLinearLayout
                    android:id="@+id/cubesfromfloorpicker"
                    style="@style/HorizontalNumberPicker" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:text="Cubes acquired from players"
                    android:textSize="30sp" />

                <sparx1126.com.powerup.custom_layouts.PlusMinusEditTextLinearLayout
                    android:id="@+id/cubesfromplayers"
                    style="@style/HorizontalNumberPicker" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/playeddefensecheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effectively Played defense"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Endgame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Game"
                android:textSize="95sp" />

            <TextView
                android:id="@+id/Climbing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Climbs on:"
                android:textSize="45sp"
                tools:ignore="DuplicateIds" />



            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <RadioButton
                android:id="@+id/climbRung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rung"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/climbRobot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other robot"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/climbDoesnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doesn't Climb"
                android:textSize="30sp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/climbOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Can be climbed on"
                android:textSize="45sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ClimbOn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Holds 1 robot"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/ClimbOn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Holds 2 robots"
                android:textSize="30sp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/Climb15secs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Can Climb under 15 seconds"
                android:textSize="40sp" />

            <Button
                android:id="@+id/submitbutton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="30sp"
                android:text="Submit" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>