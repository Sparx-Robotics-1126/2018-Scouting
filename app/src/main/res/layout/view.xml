<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sparx_gradient"
    android:textSize="120sp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/sparxRedDark"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/teamnumberlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Enter Team Number" />

        <EditText
            android:id="@+id/teamnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sparxRedLight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numberofmatchesplayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Matches Played"
            android:textColor=" #000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/matchesplayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor=" #000000"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sparxRedDark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crosslinelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crossed the line:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/attemptsforcrossline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor=" #000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sparxRedLight"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreswitchlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scored with switch:"
                android:textColor=" #000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/attemptsforscoreswitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor=" #000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sparxRedDark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pickedupcubelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Picked Up Cube:"
                android:textColor=" #000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/attemptsforpickedupcube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor=" #000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sparxRedLight"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/placedcubeinexchangelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Placed Cube In Exchange:"
                android:textColor=" #000000"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sparxRedDark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RobotStartingPlacelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Robot Starting Place:"
                android:textColor=" #000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/attemptsforRobotStartingPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor=" #000000"
                android:textSize="20sp" />

        </LinearLayout>

        <ExpandableListView
            android:id="@+id/autoscoutingdata"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
            android:divider="@color/colorAccent"
            android:dividerHeight="0.5dp" />
    </LinearLayout>

</LinearLayout>