<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <!--FINISH  style="@style/J_basicTextView" for all textviews-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sparxRedLight"
        android:orientation="vertical"
        android:padding="5dp">
        <!--intro-->
        <LinearLayout
            style="@style/J_designLayout"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Team Number:"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/teamnumberinput"
                    style="@style/J_ShortEditText"
                    android:maxLength="4" />


            </LinearLayout>

        </LinearLayout>
        <!--Base-->
        <LinearLayout
            style="@style/J_designLayout"
            android:background="@color/sparxRedDark"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="Type of Drive System"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Speed (ft/s):"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/speed"
                    style="@style/J_ShortEditText"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Height (ft):"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/height"
                    style="@style/J_ShortEditText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight (lb):"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/weight"
                    style="@style/J_ShortEditText"/>

            </LinearLayout>

        </LinearLayout>
        <!--Start-->
        <LinearLayout
            style="@style/J_designLayout"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Preferred to Start"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Left"
                    android:textSize="25sp"/>

                <CheckBox
                    style="@style/J_checkBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Center"
                    android:textSize="25sp"/>

                <CheckBox
                    style="@style/J_checkBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Right"
                    android:textSize="25sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Can Start"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <CheckBox
                    style="@style/J_checkBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Left"
                    android:textSize="25sp"/>

                <CheckBox
                    style="@style/J_checkBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Center"
                    android:textSize="25sp"/>

                <CheckBox
                    style="@style/J_checkBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Right"
                    android:textSize="25sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Can Start With Cube"
                    android:textSize="25sp"/>

                <CheckBox
                    style="@style/J_checkBox"/>

            </LinearLayout>

        </LinearLayout>
        <!--Auto-->
        <LinearLayout
            style="@style/J_designLayout"
            android:background="@color/sparxRedDark"
            >

            <TextView
                style="@style/J_basicTextView"
                android:text="Auto"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:text="Can Move Past Line"
                    style="@style/J_basicTextView"
                    />

                <CheckBox
                    style="@style/J_checkBox"/>

            </LinearLayout>

            <TextView
                style="@style/J_basicTextView"
                android:layout_marginTop="15dp"
                android:text="Can Score in Auto"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <CheckBox
                    style="@style/J_checkBox"
                    />

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Scale"
                    />

                <CheckBox
                    style="@style/J_checkBox"
                    />

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Switch"
                    />
            </LinearLayout>

        </LinearLayout>
        <!--Teleop-->
        <LinearLayout
            style="@style/J_designLayout"
            >

            <TextView
                style="@style/J_basicTextView"
                android:text="Teleop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Acquire from Floor"
                    />

                <CheckBox
                    style="@style/J_checkBox"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Get from Portal/Vault"
                    />

                <CheckBox
                    style="@style/J_checkBox"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Deposit to Vault"
                    />

                <CheckBox
                    style="@style/J_checkBox"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Score Switch"

                    />

                <CheckBox
                    style="@style/J_checkBox"
                    />
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/J_radioButton"
                    android:text="Toss"
                    />

                <RadioButton
                    style="@style/J_radioButton"
                    android:text="Place"
                    />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Can Score Scale"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    />

                <CheckBox
                    style="@style/J_checkBox"
                    />

            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/J_radioButton"
                    android:text="Toss"
                    />

                <RadioButton
                    style="@style/J_radioButton"
                    android:text="Place"
                    />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Preferred Cube Pick Up Location"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    />

                <RadioGroup
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        style="@style/J_radioButton"
                        android:text="Floor" />

                    <RadioButton
                        style="@style/J_radioButton"
                        android:text="Portal" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
        <!--End-->
        <LinearLayout
            style="@style/J_designLayout"
            android:background="@color/sparxRedDark"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Climbing"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Can Climb Rung"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    />

                <CheckBox
                    style="@style/J_checkBox"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="How High Can it be From Platform(ft)?"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/climbheight"
                    style="@style/J_ShortEditText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Has Rungs"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    />

                <CheckBox
                    style="@style/J_checkBox"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Can Attach to Robot"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    />

                <CheckBox
                    style="@style/J_checkBox"/>

            </LinearLayout>

        </LinearLayout>
        <!--done-->
    </LinearLayout>

</ScrollView>