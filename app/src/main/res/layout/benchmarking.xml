<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:padding="5dp">


        <!-- fix checkboxes - change to on/off button

                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:text="test"
    -->


        <!--intro-->
        <LinearLayout style="@style/J_designLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:paddingBottom="@dimen/margin_topbottom_default"
                    android:paddingTop="@dimen/margin_topbottom_default"
                    android:text="Team Number" />

                <EditText
                    android:id="@+id/team_number"
                    style="@style/J_ShortEditText"
                    android:digits="1234567890"
                    android:hint="1126"
                    android:textColorHint="@color/accentColorHint"
                    android:maxLength="4" />


            </LinearLayout>
        </LinearLayout>
        <!--About-->
        <LinearLayout
            style="@style/J_designLayout"
            android:background="@color/backgroundColor">

            <TextView
                style="@style/J_basicTextView"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:text="About"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/drive_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#f2b632"
                android:dropDownWidth="match_parent"
                android:popupBackground="@color/accentColor"
                android:textColor="@color/accentColor"
                android:textColorHint="@color/accentColorHint"
                android:textSize="@dimen/main_text_size" />

            <EditText
                android:id="@+id/customDrive"
                style="@style/J_basicTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Custom Drive Type"
                android:textColor="@color/accentColor"
                android:textColorHint="@color/accentColorHint" />

            <Spinner
                android:id="@+id/wheel_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#f2b632"
                android:dropDownWidth="match_parent"
                android:popupBackground="@color/accentColor"
                android:textColor="@color/accentColor"
                android:textColorHint="@color/accentColorHint"
                android:textSize="@dimen/main_text_size"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/customWheel"
                style="@style/J_basicTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Custom Wheel Type"
                android:textColor="@color/accentColor"
                android:textColorHint="@color/accentColorHint" />

            <LinearLayout
                style="@style/J_horizontalLinearLayout"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp">

                <TextView
                    style="@style/J_basicTextView"
                    android:paddingBottom="@dimen/margin_topbottom_default"
                    android:paddingTop="@dimen/margin_topbottom_default"
                    android:text="Speed (ft/s):"
                    />

                <EditText
                    android:id="@+id/speed"
                    style="@style/J_ShortEditText"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/J_horizontalLinearLayout"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp">

                <TextView
                    style="@style/J_basicTextView"
                    android:paddingBottom="@dimen/margin_topbottom_default"
                    android:paddingTop="@dimen/margin_topbottom_default"
                    android:text="Height (ft):" />

                <EditText
                    android:id="@+id/height"
                    style="@style/J_ShortEditText"
                    android:maxLength="2"/>

            </LinearLayout>

            <LinearLayout
                style="@style/J_horizontalLinearLayout"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp">

                <TextView
                    style="@style/J_basicTextView"
                    android:paddingBottom="@dimen/margin_topbottom_default"
                    android:paddingTop="@dimen/margin_topbottom_default"
                    android:text="Weight (lb):" />

                <EditText
                    android:id="@+id/weight"
                    style="@style/J_ShortEditText"
                    android:maxLength="3"/>

            </LinearLayout>

            <LinearLayout
                style="@style/J_horizontalLinearLayout"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp">

                <TextView
                    style="@style/J_basicTextView"
                    android:paddingBottom="@dimen/margin_topbottom_default"
                    android:paddingTop="@dimen/margin_topbottom_default"
                    android:text="Number Of Wheels" />

                <EditText
                    android:id="@+id/numWheels"
                    style="@style/J_ShortEditText"
                    android:maxLength="2"/>

            </LinearLayout>

        </LinearLayout>
        <!--Start-->
        <LinearLayout style="@style/J_designLayout">

            <TextView
                style="@style/J_basicTextView"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:text="Start"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rankStartTextView"
                style="@style/J_basicTextView"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:text="Top Start Pos: 1. none 2. none 3. none"
                android:textSize="33dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/prefStartGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pref_left"
                        style="@style/J_radioButton"
                        android:text="Left" />


                    <RadioButton
                        android:id="@+id/pref_center"
                        style="@style/J_radioButton"
                        android:text="Center" />

                    <RadioButton
                        android:id="@+id/pref_right"
                        style="@style/J_radioButton"
                        android:text="Right" />
                </RadioGroup>


            </LinearLayout>

            <Button
                android:id="@+id/chooseAgainButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/accentColor"
                android:text="choose again"
                android:textColor="@color/backgroundColorLight"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Start With Cube" />

                <CheckBox
                    android:id="@+id/start_w_cube"
                    style="@style/J_checkBox"
                    android:layoutDirection="rtl" />

            </LinearLayout>

        </LinearLayout>
        <!--Auto-->
        <LinearLayout
            style="@style/J_designLayout"
            android:background="@color/backgroundColor">

            <TextView
                style="@style/J_basicTextView"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:text="Auto"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Move Past Line" />

                <CheckBox
                    android:id="@+id/move_past_line"
                    style="@style/J_checkBox" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Score in Auto" />

                <CheckBox
                    android:id="@+id/general_score_auto"
                    style="@style/J_checkBox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/auto_switch"
                    style="@style/J_word_checkBox"
                    android:text="Switch" />

                <CheckBox
                    android:id="@+id/auto_scale"
                    style="@style/J_word_checkBox"
                    android:text="Scale" />

            </LinearLayout>

        </LinearLayout>
        <!--Teleop-->
        <LinearLayout style="@style/J_designLayout">

            <TextView
                style="@style/J_basicTextView"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:text="Teleop"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Acquire from Floor" />

                <CheckBox
                    android:id="@+id/acquire_floor"
                    style="@style/J_checkBox" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Get from Portal/Vault" />

                <CheckBox
                    android:id="@+id/get_from_portal"
                    style="@style/J_checkBox" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:orientation="horizontal">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Deposit to Vault" />

                <CheckBox
                    android:id="@+id/deposit_vault"
                    style="@style/J_checkBox" />
            </LinearLayout>

            <LinearLayout
                style="@style/J_horizontalLinearLayout"
                android:layout_marginBottom="0dp">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Score Switch"

                    />

                <CheckBox
                    android:id="@+id/score_switch"
                    style="@style/J_checkBox" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/toss_switch"
                    style="@style/J_radioButton"
                    android:text="Toss" />

                <RadioButton
                    android:id="@+id/place_switch"
                    style="@style/J_radioButton"
                    android:text="Place" />

            </RadioGroup>

            <LinearLayout
                style="@style/J_horizontalLinearLayout"
                android:layout_marginBottom="0dp">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Score Scale" />

                <CheckBox
                    android:id="@+id/score_scale"
                    style="@style/J_checkBox" />

            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/toss_scale"
                    style="@style/J_radioButton"
                    android:text="Toss" />

                <RadioButton
                    android:id="@+id/place_scale"
                    style="@style/J_radioButton"
                    android:text="Place" />

            </RadioGroup>

            <TextView
                style="@style/J_basicTextView"
                android:layout_marginTop="@dimen/margin_topbottom_default"
                android:text="Preferred Cube Pick Up Location" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_topbottom_default"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/pref_floor"
                    style="@style/J_radioButton"
                    android:text="Floor" />

                <RadioButton
                    android:id="@+id/pref_portal"
                    style="@style/J_radioButton"
                    android:text="Portal" />

            </RadioGroup>

        </LinearLayout>
        <!--improve by adding specific values for attaching to another robot:-->
        <!--End-->
        <LinearLayout
            style="@style/J_designLayout"
            android:background="@color/backgroundColor">

            <TextView
                style="@style/J_basicTextView"
                android:text="Climbing"
                android:textStyle="bold" />

            <LinearLayout style="@style/J_horizontalLinearLayout">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Climb Field Rung" />

                <CheckBox
                    android:id="@+id/climb_rung"
                    style="@style/J_checkBox" />

            </LinearLayout>

            <LinearLayout style="@style/J_horizontalLinearLayout">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Has Rungs" />

                <CheckBox
                    android:id="@+id/has_rungs"
                    style="@style/J_checkBox" />

            </LinearLayout>

            <LinearLayout
                style="@style/J_horizontalLinearLayout"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp">

                <TextView
                    style="@style/J_basicTextView"
                    android:paddingBottom="@dimen/margin_topbottom_default"
                    android:paddingTop="@dimen/margin_topbottom_default"
                    android:text="How High Can it Be From Platform(ft)?" />

                <EditText
                    android:id="@+id/climb_height"
                    style="@style/J_ShortEditText" />

            </LinearLayout>

            <LinearLayout style="@style/J_horizontalLinearLayout">

                <TextView
                    style="@style/J_basicTextView"
                    android:text="Can Attach to Another Robot" />

                <CheckBox
                    android:id="@+id/attach_robot"
                    style="@style/J_checkBox" />

            </LinearLayout>

        </LinearLayout>
        <!--button-->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:background="@color/accentColor"
            android:text="SUBMIT"
            android:textColor="@color/backgroundColor"
            android:textSize="40sp" />
        <!--done-->
    </LinearLayout>

</ScrollView>