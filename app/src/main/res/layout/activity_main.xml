<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <AutoCompleteTextView
        android:id="@+id/studentNameAutoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:hint="Scouter Name"
        android:textSize="30sp"
        android:textColorHint="@color/accentColorHint"
        android:textColor="@color/accentColor"
        android:shadowColor="@color/textColor"/>

    <EditText
        android:id="@+id/studentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/studentNameAutoText"
        android:hint="Password"
        android:shadowColor="@color/textColor"
        android:textColor="@color/accentColor"
        android:textColorHint="@color/accentColorHint"
        android:textSize="30sp" />

    <Button
        android:id="@+id/logInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentPassword"
        android:layout_centerHorizontal="true"
        android:width="190dp"
        android:height="75dp"
        android:backgroundTint="@color/accentColor"
        android:text="Log On"
        android:textColor="@color/backgroundColor"
        android:textSize="20sp" />

</RelativeLayout>
