<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="sparx1126.com.powerup.MainActivity"
    android:id="@+id/wholeView">

    <AutoCompleteTextView
        android:id="@+id/studentNameAutoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM' "
        android:hint="Scouter Name"
        android:textSize="30sp"
        android:textColorHint="@color/accentColorHint"
        android:textColor="@color/accentColor"
        android:shadowColor="@color/textColor"/>

    <Button
        android:id="@+id/toScouting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/toView"
        android:width="190dp"
        android:height="75dp"
        android:backgroundTint="@color/accentColor"
        android:text="Scouting"
        android:textColor="@color/backgroundColor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/toBenchmarking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toChecklist"
        android:layout_toEndOf="@+id/toChecklist"
        android:width="190dp"
        android:height="75dp"
        android:backgroundTint="@color/accentColor"
        android:text="Benchmarking"
        android:textColor="@color/backgroundColor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/toView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toScouting"
        android:layout_alignStart="@+id/toChecklist"
        android:layout_marginBottom="65dp"
        android:width="190dp"
        android:height="75dp"
        android:backgroundTint="@color/accentColor"
        android:text="View"
        android:textColor="@color/backgroundColor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/toChecklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toScouting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:width="190dp"
        android:height="75dp"
        android:backgroundTint="@color/accentColor"
        android:text="Checklist"
        android:textColor="@color/backgroundColor"
        android:textSize="20sp" />



</RelativeLayout>
