<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryDark">@color/backgroundColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="basic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/accentColor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/accentColorHint</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="HorizontalNumberPicker" parent="basic">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="J_NumberEditText" parent="basic">
        <item name="android:inputType">numberPassword</item>
        <item name="android:digits">1234567890</item>
        <item name="android:maxLength">3</item>
        <item name="android:gravity">right</item>
        <item name="android:hint">00</item>
        <item name="android:layout_weight">.25</item>
    </style>

    <style name="J_checkBox" parent="basic">
        <item name="android:buttonTint">@color/accentColor</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

<!--parent these 2 /\  \/  -->
    <style name="J_labeled_checkBox" parent="J_checkBox">
        <item name="android:layoutDirection">ltr</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="J_verticalLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="J_horizontalLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="J_NormalTextView" parent="basic">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="J_BigTextView" parent="J_NormalTextView">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="J_NormalEditText" parent="basic">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:maxLength">50</item>
    </style>

    <style name="J_headingTextView" parent="basic">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="J_autoCompleteTextView" parent="basic">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="J_numberAutoCompleteTextView" parent="J_autoCompleteTextView">
        <item name="android:inputType">numberPassword</item>
        <item name="android:digits">1234567890</item>
        <item name="android:maxLength">4</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_weight">.3</item>
    </style>

    <style name="J_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="J_radioButton" parent="basic">
        <item name="android:buttonTint">@color/accentColor</item>
    </style>

    <style name="J_radioGroup" parent="basic">
        <item name="android:buttonTint">@color/accentColor</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <style name="J_NormalButton" parent="basic">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">25dp</item>
        <item name="android:backgroundTint">@color/accentColor</item>
    </style>

    <style name="J_StretchedButton"  parent="J_NormalButton">
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
