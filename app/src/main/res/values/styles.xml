<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sparxRedLight</item>
        <item name="colorPrimaryDark">@color/sparxRedDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

   <!-- <style name="HomeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/ic_home_black_24dp</item>
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorSparxRed</item>
    </style> -->

    <style name="BigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:backgroundTint">@color/sparxRedDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_normal</item>
    </style>

    <style name="SectionText" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderText" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_normal</item>
    </style>

    <style name="NormalTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">323dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_weight">0.92</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CheckBoxTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_weight">0.22</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RadioTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LongEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="ShortEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">0.92</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ems">10</item>
    </style>

    <style name="MultiShortEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_weight">0.92</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ems">10</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.,;012345678 9 </item>
    </style>

    <style name="MultiLongEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_weight">0.14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ems">10</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="YesNoToggle" parent="android:Widget.DeviceDefault.Button.Toggle">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textOff">"no"</item>
        <item name="android:textOn">"yes"</item>
        <item name="android:backgroundTint">@color/sparxRedDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">"toggleButton"</item>
    </style>

    <style name="Checkbox" parent="android:Widget.Material.CompoundButton.CheckBox">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.14</item>
        <item name="android:buttonTint">@color/sparxRedDark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="RadioButton" parent="android:Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/sparxRedDark</item>
    </style>

    <style name="HorizontalNumberPicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="J_ShortEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">1234567890</item>
    </style>

    <style name="J_checkBox" parent="android:Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="J_designLayout" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="J_radioButton" parent="android:Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="J_basicTextView" parent="android:Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

</resources>
